@if (Model != null)
            {
    <div class="row">
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-user fa-fw"></i>
                    Acciones de Perfil
                </div>
                <div class="panel-body">
                    <div class="list-group">
                        <a href="#" class="list-group-item">
                            <i class="fa fa-address-book"></i> Agregar Direcciones
                        </a>
                    </div>
                    <div class="list-group">
                        <a href="#" class="list-group-item">
                            <i class="fa fa-phone"></i> Agregar Telefonos de contacto
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">Perfil Medico</div>
                <div class="panel-body">


                    <img src="data:image/png;base64,@Convert.ToBase64String(Model.Photo, 0, Model.Photo.Length)" width="100"
                         class="img-responsive" alt="Imagen de Perfil" />
                    <dl class="dl-horizontal">
                        <dt>@Html.DisplayNameFor(model => model.PrimerNombre)</dt>
                        <dd>@Html.DisplayFor(model => model.PrimerNombre)</dd>
                        <dt>@Html.DisplayNameFor(model => model.SegundoNombre)</dt>
                        <dd>@Html.DisplayFor(model => model.SegundoNombre)</dd>
                        <dt>@Html.DisplayNameFor(model => model.PrimerApellido)</dt>
                        <dd>@Html.DisplayFor(model => model.PrimerApellido)</dd>
                        <dt>@Html.DisplayNameFor(model => model.SegundoApellido)</dt>
                        <dd>@Html.DisplayFor(model => model.SegundoApellido)</dd>
                        <dt>@Html.DisplayNameFor(model => model.PrimerNombre)</dt>
                        <dd>@Html.DisplayFor(model => model.PrimerNombre)</dd>
                        @if (Model.Direcciones != null)
                        {
                            foreach (var item in Model.Direcciones)
                            {
                                @Html.DisplayFor(x => item.Direccion)
                            }
                        }
                    </dl>
                    @Html.ActionLink("Editar Perfil","Editar","PerfilMedico", new { UserId = Model.Id }, new { @class = "btn btn-primary" })


                </div>
            </div>


        </div>
    </div>
}


@section Scripts {

    <script src="~/Scripts/MyScript.js"></script>
}
